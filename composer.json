{
    "name": "tegtmeier/hotel-prices",
    "description": "PHP-Library zum Laden und Berechnen von Hotelpreisen",
    "require": {
        "php": "^7.4",
        "ext-simplexml": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "sensiolabs/security-checker": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
      "task": "php -dxdebug.client_host=127.0.0.1 -dxdebug.client_port=9003 -dxdebug.discover_client_host=false -dxdebug.idekey='PHPSTORM' -dxdebug.mode=coverage,debug public/index.php",
      "tests": "./vendor/bin/phpunit --testdox tests",
      "security": "local-php-security-checker --path=./composer.lock",
      "phpcbf": "phpcbf --extensions=php --standard=PSR12 -v ./src",
      "phpmd": "phpmd src text cleancode",
      "phpcs": "phpcs --colors -p --standard=PSR12 --encoding=utf-8 -n src/"
    }
}
