{
    "name": "tegtmeier/hotel-prices",
    "description": "PHP-Library zum Laden und Berechnen von Hotelpreisen",
    "require": {
        "php": "^7.4",
        "ext-simplexml": "*",
        "ext-json": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "sensiolabs/security-checker": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
      "task": "php public/index.php",
      "xdebug": "php -dxdebug.client_host=127.0.0.1 -dxdebug.client_port=9003 -dxdebug.discover_client_host=false -dxdebug.idekey='PHPSTORM' -dxdebug.mode=coverage,debug public/index.php",
      "tests": "./vendor/bin/phpunit --testdox --colors --no-interaction tests",
      "failed": "./vendor/bin/phpunit --testdox --colors --no-interaction --order-by=defects --stop-on-failure tests",
      "webserver": "php -S 0.0.0.0:80 public/index.php",
      "coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --testdox --coverage-text --coverage-clover=build/logs/coverage.xml --coverage-html build/coverage --whitelist src --colors tests",
      "php-depend": "pdepend --summary-xml=./build/logs/summary.xml --jdepend-chart=./build/logs/jdepend.svg --overview-pyramid=./build/logs/pyramid.svg src",
      "security-checker": "local-php-security-checker --path=./composer.lock",
      "fix": "phpcbf --extensions=php --standard=PSR12 -v ./src",
      "mess-detector": "phpmd src text cleancode",
      "analysis": "phpstan analyse src --level 7",
      "export": "git archive --format=tar --output=sasa-kocic.tar HEAD",
      "check": "phpcs --colors -p --standard=PSR12 -s --encoding=utf-8 -n --exclude=Generic.Files.LineLength src/"
    }
}
